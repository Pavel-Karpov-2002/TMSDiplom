@using Diploma.Models
@model UserViewModel

@section Style {
    <link rel="stylesheet" href="~/css/profile.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
}

@section Script {
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <script src="~/lib/jquery/dist/jquery.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/6.0.1/signalr.js"></script>
    <script src="~/js/post.js"></script>
}

<div class="container">
    <div class="profile-page tx-13">
        <div class="row">
            <div class="col-12 grid-margin">
                <div class="profile-header">
                    <div class="header-links">
                        <ul class="links d-flex align-items-center mt-3 mt-md-0">
                            <li class="header-link-item d-flex align-items-center active">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-columns mr-1 icon-md">
                                    <path d="M12 3h7a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-7m0-18H5a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h7m0-18v18"></path>
                                </svg>
                                <a class="pt-1px d-none d-md-block" href="/posts/">Новости</a>
                            </li>
                            <li class="header-link-item ml-3 pl-3 border-left d-flex align-items-center">
                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-users mr-1 icon-md">
                                    <path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                                    <circle cx="9" cy="7" r="4"></circle>
                                    <path d="M23 21v-2a4 4 0 0 0-3-3.87"></path>
                                    <path d="M16 3.13a4 4 0 0 1 0 7.75"></path>
                                </svg>
                                <a class="pt-1px d-none d-md-block" href="/user/">
                                    Друзья 
                                    <span class="text-muted tx-12">
                                        3,765
                                        </span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="row profile-body">
            <!-- USER PROFILE -->
            <div class="d-none d-md-block col-md-4 col-xl-3 left-wrapper">
                <div class="card rounded">
                    <div class="cover">
                        <div class="gray-shade"></div>
                        <div class="cover-body d-flex justify-content-between align-items-center">
                            <div>
                                <img class="profile-pic" src="@Model.AvatarUrl" alt="profile">
                                <span class="profile-name">@Model.Username</span>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">

                        @if (Model.IsOnline)
                        {
                            <div class="mt-3">
                                <p class="text-muted">Online</p>
                            </div>
                        }
                        else
                        {
                            <div class="mt-3">
                                <p class="text-muted">Offline</p>
                            </div>
                        }
                        @if (Model.Birthday != null)
                        {
                            <div class="mt-3">
                                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Дата рождения:</label>
                                <p class="text-muted">@Model.Birthday</p>
                            </div>
                        }
                        @if (Model.Email != null)
                        {
                            <div class="mt-3">
                                <label class="tx-11 font-weight-bold mb-0 text-uppercase">Email:</label>
                                <p class="text-muted">@Model.Email</p>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <!-- USER PROFILE -->

            <!-- POSTS -->
            <div class="col-md-8 col-xl-6 middle-wrapper">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group post-form">
                            <input type="hidden" name="userId" class="user-id" value="3" /> @* @User.FindFirst("id").Value *@
                            <input type="hidden" name="userName" class="user-name" value="user" />
                            <input type="hidden" name="userAvatarUrl" class="user-avatar-url" value="avatar" />
                            <textarea class="form-control btn-post-description" id="exampleFormControlTextarea1" rows="3"></textarea>
                            <button type="submit" class="btn btn-outline-secondary btn-add-post" id="input-group-button-right">
                                Оставить пост
                            </button>
                        </div>
                    </div>
                    <div class="col-md-12 posts">

                        <div class="col-md-12 grid-margin post post-template">
                            @* НАЧАЛА ПОСТА *@
                            <div class="card rounded">
                                <div class="card-header">
                                    <div class="d-flex align-items-center justify-content-between">
                                        <div class="d-flex align-items-center">
                                            <img class="img-xs rounded-circle user-src-avatarUrl" src="" alt="">@* post.CreatorAvatarUrl *@
                                            <div class="ml-2">
                                                <p class="post-creator"></p> @* Creator *@
                                            </div>
                                        </div>
                                        @* @if (post.CanEditPost || post.CanDeletePost) *@

                                        <div class="dropdown">
                                            <button class="btn p-0" type="button" id="dropdownMenuButton2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal icon-lg pb-3px">
                                                    <circle cx="12" cy="12" r="1"></circle>
                                                    <circle cx="19" cy="12" r="1"></circle>
                                                    <circle cx="5" cy="12" r="1"></circle>
                                                </svg>
                                            </button>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton2">
                                                @*    @if (post.CanEditPost)
                                                {
                                                <a class="dropdown-item d-flex align-items-center" href="#">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-meh icon-sm mr-2">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <line x1="8" y1="15" x2="16" y2="15"></line>
                                                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                                                <line x1="15" y1="9" x2="15.01" y2="9"></line>
                                                </svg> <span class="">Изменить</span>
                                                </a>
                                                }
                                                *@
                                                @*  @if (post.CanDeletePost)
                                                {
                                                <a class="dropdown-item d-flex align-items-center" href="#">
                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-meh icon-sm mr-2">
                                                <circle cx="12" cy="12" r="10"></circle>
                                                <line x1="8" y1="15" x2="16" y2="15"></line>
                                                <line x1="9" y1="9" x2="9.01" y2="9"></line>
                                                <line x1="15" y1="9" x2="15.01" y2="9"></line>
                                                </svg> <span class="">Удалить</span>
                                                </a>
                                                } *@
                                            </div>
                                        </div>
                                        @* @if (post.CanEditPost || post.CanDeletePost) end *@
                                    </div>
                                </div>
                                <div class="card-body">
                                    <p class="mb-3 tx-14 post-description"></p> @* post.Description *@
                                </div>
                                <div class="card-footer">
                                    <div class="d-flex post-actions">
                                        @* <a href="javascript:;" class="d-flex align-items-center text-muted mr-4">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-heart icon-md">
                                        <path d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z"></path>
                                        </svg>
                                        <p class="d-none d-md-block ml-2">Like</p>
                                        </a> *@
                                        <a href="javascript:;" class="d-flex align-items-center text-muted mr-4">
                                            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-message-square icon-md">
                                                <path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"></path>
                                            </svg>
                                            <p class="d-none d-md-block ml-2">Комментировать</p>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            <!-- END POSTS -->

            <!-- FRIENDS -->
            <div class="d-none d-xl-block col-xl-3 right-wrapper">
                <div class="row">
                    <div class="col-md-12 grid-margin">
                        <div class="card rounded">
                            <div class="card-body">
                                <h6 class="card-title">Друзья</h6>
                                <div class="latest-friends">
                                    <div class="row">
                                        @foreach (var friend in Model.Friends)
                                        {
                                            <div class="col-md-4">
                                                <a href="/user/@friend.UserId">
                                                    <figure>
                                                        <img class="img-fluid" src="@friend.AvatarUrl" alt="@friend.Username">
                                                        <p class="p-friend-username">
                                                            @friend.Username
                                                        </p>
                                                    </figure>
                                                </a>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- END FRIENDS -->
        </div>
    </div>
</div>